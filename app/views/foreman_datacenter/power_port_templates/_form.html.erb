<%= form_for @power_port_template, as: :power_port_template, url: (@power_port_template.new_record? ? device_type_power_port_templates_path : device_type_power_port_template_path(@power_port_template)) do |f| %>
    <%= base_errors_for @power_port_template %>

    <div class="clearfix">
      <div class="form-group">
        <label class="col-md-2 control-label required">Device Type</label>
        <div class="col-md-4"><%= @power_port_template.device_type.model %></div>
      </div>
    </div>

    <%= f.hidden_field :device_type_id %>
    <%= text_f f, :name, required: true %>

    <%= submit_or_cancel f, false, cancel_path: device_type_path(@power_port_template.device_type) %>
<% end %>
